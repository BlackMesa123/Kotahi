<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Kotahi" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:statusBarColor">@color/samsung_bg_color</item>
        <item name="android:navigationBarColor">@color/samsung_bg_color</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
        <item name="android:windowLayoutInDisplayCutoutMode" tools:targetApi="o_mr1">shortEdges</item>
        <item name="android:listChoiceBackgroundIndicator">?attr/listChoiceBackgroundIndicator</item>
        <item name="appBarLayoutStyle">@style/Widget.Design.AppBarLayout</item>
        <item name="collapsingToolbarLayoutStyle">@style/Widget.Design.Light.CollapsingToolbar</item>
        <item name="tabStyle">@style/Widget.Design.TabLayout.Light</item>
    </style>

    <!-- OOBE -->
    <style name="Theme.Kotahi.OOBEActivity" parent="Theme.Kotahi">
        <item name="android:windowBackground">@color/samsung_bg_color</item>
        <item name="android:colorBackground">@color/samsung_bg_color</item>
    </style>

</resources>